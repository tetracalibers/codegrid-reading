---
interface Props {
  text: string
}

const { text } = Astro.props
---

<h2 class="gm-section__heading">{text}</h2>

<style>
  .gm-section__heading {
    --img-size: 35px;

    text-transform: uppercase;
    font-size: 1.4rem;
    letter-spacing: 0.1em;
    color: #457703;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: calc(60px - var(--img-size));
    white-space: nowrap;
  }

  .gm-section__heading::before,
  .gm-section__heading::after {
    content: "";
    width: var(--img-size);
    height: var(--img-size);
    background-size: contain;
    background-repeat: no-repeat;
  }

  .gm-section__heading::before {
    background-image: url("/images/coco-factory/grean-market/bg_heading-left.png");
  }

  .gm-section__heading::after {
    background-image: url("/images/coco-factory/grean-market/bg_heading-right.png");
  }
</style>
