---
import ArrowLink from "@/components/arrow-link.astro"
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body>
    <section>
      <h1>::beforeで三角形をつくる</h1>
      <ArrowLink arrow={{ to: "right" }} />
      <ArrowLink arrow={{ to: "left" }} />
      <ArrowLink arrow={{ to: "top" }} />
      <ArrowLink arrow={{ to: "bottom" }} />
    </section>
  </body>
</html>
